<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yad.gamereservation.forgotpassword">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forgot"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:background="@drawable/shape1"
                android:hint=" Email Or PhoneNumber"
                android:inputType="textPersonName"
                android:textColor="@color/text"
                android:layout_weight="3.33" />

            <Spinner
                android:layout_gravity="top"
                android:popupBackground="#d6d1d1"
                android:popupTheme="@color/colorPrimary"
                android:id="@+id/spinner"
                style="@android:style/Widget.Spinner"
                android:layout_width="119dp"
                android:layout_height="50dp"
                android:layout_weight="3.31"
                android:spinnerMode="dropdown"
                />
        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Forgot password"
            android:onClick="onClick"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
